extends layout

block content
  h1 #{title}: #{book.title}

  if instance_list.length 

    p #[strong Delete the following instances before attempting to delete this book.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Instances

      dl
      each instance in instance_list
        dt
          a(href=instance.url) #{instance.id}
        dd #{instance.book}

  else
    p Do you really want to delete this book?

    form(method='POST' action='')
      div.form-group
        input#authorid.form-control(type='hidden',name='authorid', required='true', value=book._id )

      button.btn.btn-primary(type='submit') Delete
